{
    "manifest_version": 2,

    "name": "Google Services",
	"short_name": "Google Services",
    "version": "1.5",
	"author": "Mazillka",
	"description": "Easy and fast access to Google Services",
	
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
		"64": "icons/64x64.png",
		"128": "icons/128x128.png"
    },
	
	"permissions": [ "tabs", "storage", "unlimitedStorage", "contextMenus", "notifications", "*://*.google.com/" ],
	
	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},
	
	"content_scripts": [
		{
			"all_frames": true,
			"js": [ "js/contentscript.js" ],
			"matches": [ "*://mail.google.com/*"],
			"run_at": "document_end"
		}
	],
	
    "browser_action": {
        "default_icon": "icons/48x48.png",
		"default_popup": "html/popup.html"
    },
	
	"options_ui": {
		"page": "html/options.html",
		"chrome_style": true
	}
 }