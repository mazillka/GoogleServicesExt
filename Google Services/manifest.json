{
    "manifest_version": 2,

    "name": "Google Services",
    "version": "1.3",
	"description": "Mazillka extension",
	
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png"
    },
	
	"permissions": [ "alarms", "tabs", "storage", "*://*.google.com/" ],
	
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	
	"content_scripts": [
		{
			"all_frames": true,
			"js": [ "contentscript.js" ],
			"matches": [ "*://mail.google.com/*"],
			"run_at": "document_end"
		}
	],
	
    "browser_action": {
        "default_icon": "icons/48x48.png",
		"default_popup": "popup.html"
    },
	
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
 }