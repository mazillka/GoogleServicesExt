{
	"manifest_version" : 2,
	"name" : "Google Services",
	"short_name" : "Google Services",
	"version" : "2.3",
	"author" : "Mazillka",
	"description" : "Easy and fast access to Google Services",
	"icons" : {
		"16" : "icons/16x16.png",
		"32" : "icons/32x32.png",
		"48" : "icons/48x48.png",
		"64" : "icons/64x64.png",
		"128" : "icons/128x128.png"
	},
	
	"permissions" : ["tabs", "storage", "unlimitedStorage", "contextMenus", "notifications", "idle", "*://*.google.com/*"],
	
	"background" : {
		"scripts" : ["js/background.js", "js/libs/jquery-2.1.3.min.js", "js/libs/jquery.sortable.min.js"],
		"persistent" : false
	},
	
	"content_scripts" : [{
			"all_frames" : true,
			"js" : ["js/contentscript.js"],
			"matches" : ["*://mail.google.com/*"],
			"run_at" : "document_start"
		}, {
			"matches" : ["<all_urls>"],
			"js" : ["js/selection.js"],
			"run_at" : "document_start",
			"all_frames" : true
		}
	],
	"browser_action" : {
		"default_icon" : "icons/48x48.png",
		"default_popup" : "html/popup.html"
	},
	"options_page" : "html/options.html",
	"commands" : {
		"Url Shortener" : {
			"suggested_key" : {
				"default" : "Alt+Q"
			},
			"description" : "Url Short"
		},
		"Translate Selected" : {
			"suggested_key" : {
				"default" : "Alt+W"
			},
			"description" : "Translate Selected"
		}
	}
}
