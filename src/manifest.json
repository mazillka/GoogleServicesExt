{
    "manifest_version": 2,
    "name": "Menu for Google™ Services",
    "short_name": "Menu for Google™ Services",
    "version": "3.6",
    "author": "Andrii Shevchuk-Yuhanets(Mazillka)",
    "description": "Easy and fast access to Google™ Services",
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "64": "icons/64x64.png",
        "128": "icons/128x128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "notifications",
        "idle",
        "*://*.google.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "all_frames": true,
            "js": [
                "contentscript.js"
            ],
            "matches": [
                "*://*.google.com/*"
            ],
            "run_at": "document_start"
        }
    ],
    "browser_action": {
        "default_icon": "icons/48x48.png",
        "default_popup": "html/popup.html"
    },
    "options_page": "html/options.html"
}
